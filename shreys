    <script>
        function handleImageUpload(input, previewId) {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById(previewId);
                    preview.innerHTML = `<img src="${e.target.result}" alt="Profile" class="w-full h-full object-cover rounded-full">`;
                };
                reader.readAsDataURL(file);
            }
        }

        function addNewDriveLink() {
            const modal = document.getElementById('drive-link-modal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            
            // Clear form
            document.getElementById('link-title').value = '';
            document.getElementById('link-description').value = '';
            document.getElementById('link-url').value = '';
            document.getElementById('link-icon').value = 'üìÅ';
        }

        function closeDriveLinkModal() {
            const modal = document.getElementById('drive-link-modal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }

        function saveDriveLink() {
            const title = document.getElementById('link-title').value;
            const description = document.getElementById('link-description').value;
            const url = document.getElementById('link-url').value;
            const icon = document.getElementById('link-icon').value;

            if (!title || !url) {
                alert('Please fill in at least the title and URL');
                return;
            }

            const container = document.getElementById('drive-links-container');
            const colors = ['blue', 'green', 'purple', 'red', 'yellow', 'indigo'];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            
            const linkElement = document.createElement('div');
            linkElement.className = 'bg-gray-800 rounded-2xl p-4 glow-beige hover-glow flex items-center justify-between group';
            linkElement.innerHTML = `
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-${randomColor}-500 bg-opacity-20 rounded-xl flex items-center justify-center">
                        <span class="text-2xl">${icon}</span>
                    </div>
                    <div>
                        <h4 class="text-white font-medium">${title}</h4>
                        <p class="text-gray-400 text-sm">${description || 'No description'}</p>
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    <a href="${url}" target="_blank" class="px-4 py-2 bg-pink-400 bg-opacity-20 rounded-xl text-pink-300 hover:bg-opacity-30 transition-colors">
                        Open
                    </a>
                    <button onclick="removeDriveLink(this)" class="opacity-0 group-hover:opacity-100 transition-opacity text-red-400 hover:text-red-300 p-2">
                        üóëÔ∏è
                    </button>
                </div>
            `;
            
            container.appendChild(linkElement);
            closeDriveLinkModal();
        }

        function removeDriveLink(button) {
            if (confirm('Are you sure you want to remove this link?')) {
                button.closest('.bg-gray-800').remove();
            }
        }

        // Close modal when clicking outside
        document.getElementById('drive-link-modal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeDriveLinkModal();
            }
        });
    </script>
